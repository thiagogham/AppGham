<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AppGham.ViewModels"
             x:Class="AppGham.Views.UserRegistrationView">
    <ContentPage.BindingContext>
        <viewmodels:UserRegistrationViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,0">
            <Entry Text="{Binding Name}" Placeholder="Name"/>
            <Entry Text="{Binding Email}" Placeholder="Email"/>
            <Image Source="{Binding PhotoPath}" WidthRequest="200"/>
            <Button Command="{Binding TakePhotoCommand}" Text="TakePhoto"/>
            <Button Command="{Binding RegisterCommand}" Text="Register" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>