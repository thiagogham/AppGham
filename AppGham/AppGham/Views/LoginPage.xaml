<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AppGham.ViewModels"
             x:Class="AppGham.Views.LoginPage">
    <ContentPage.BindingContext>
        <viewmodels:LoginPage />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,0">
            <Entry Text="{Binding User.Email}" Placeholder="Email"/>
            <Entry Text="{Binding User.Password}" Placeholder="Password" IsPassword="True"/>
            <Button Command="{Binding SaveCommand}" Text="Login" />
            <StackLayout VerticalOptions="EndAndExpand">
                <Button Command="{Binding SignUpCommand}" Text="Sign Up" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>